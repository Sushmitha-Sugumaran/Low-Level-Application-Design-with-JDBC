Table: book
Columns:
b_id int AI PK
b_title varchar(50)
b_auth varchar(50)
b_type varchar(50)
b_count int
b_stock int
b_price double

Table: borrow
Columns:
b_id int PK
u_id int PK
b_title varchar(50)
b_auth varchar(50)
b_type varchar(50)
b_count int
b_price double

Table: return_book
Columns:
u_id int
b_id int
fineAmt varchar(100)
days varchar(100)

Table: user
Columns:
u_id int PK
u_name varchar(50)
u_pass varchar(50)
u_amt double